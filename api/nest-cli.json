{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "../i18n/**/*", "outDir": "dist/i18n", "watchAssets": true },
      {
        "include": "../email-template/**",
        "outDir": "dist/email-template",
        "watchAssets": true
      },
      { "include": "../seed/**", "outDir": "dist/seed", "watchAssets": true }
    ],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [".dto.ts"]
        }
      }
    ]
  }
}
